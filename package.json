{
  "name": "whatsapp-manager-platform",
  "version": "1.0.0",
  "description": "Plataforma profissional para gerenciamento centralizado de múltiplos números WhatsApp Business",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd apps/api && npm run test",
    "test:web": "cd apps/web && npm run test",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "backup": "node scripts/backup.js",
    "backup:smart": "node scripts/smart-backup.js",
    "backup:monitor": "node scripts/backup-monitor.js",
    "seed": "cd apps/api && npm run seed",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm run install:api && npm run install:web",
    "install:api": "cd apps/api && npm install",
    "install:web": "cd apps/web && npm install"
  },
  "keywords": [
    "whatsapp",
    "business",
    "management",
    "platform",
    "nestjs",
    "react",
    "typescript",
    "rbac",
    "multi-tenant"
  ],
  "author": "Andre Sertel <andresertel@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andresousar/whatsapp-manager-platform.git"
  },
  "bugs": {
    "url": "https://github.com/andresousar/whatsapp-manager-platform/issues"
  },
  "homepage": "https://github.com/andresousar/whatsapp-manager-platform#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.0"
  },
  "lint-staged": {
    "apps/api/src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/web/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
